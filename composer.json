{
  "name": "robinn/cache",
  "description": "Simple cache for PHP with support for Redis, Memcached, APCu and Files.",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "cache",
    "file",
    "memcache",
    "memcached",
    "redis"
  ],
  "authors": [
    {
      "name": "Róbert Kelčák",
      "email": "robo@kelcak.com",
      "homepage": "https://kelcak.com"
    }
  ],
  "support": {
    "issues": "https://github.com/RobiNN1/Cache/issues",
    "source": "https://github.com/RobiNN1/Cache"
  },
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.5"
  },
  "suggest": {
    "ext-apcu": "Required to use the APCu cache driver.",
    "ext-memcache": "Required to use the Memcache cache driver.",
    "ext-memcached": "Required to use the Memcached cache driver.",
    "ext-redis": "Required to use the Redis cache driver."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "RobiNN\\Cache\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RobiNN\\Cache\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpstan": "phpstan --ansi",
    "test": "phpunit --colors=always"
  }
}
